<!DOCTYPE html>
<html lang="en">
<head>
        <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="wellcome">
            <center><h1>Welcome to My chat io</h1></center>
        </div>
        <form method="POST" action="/register">
            <div class="form-register">
                <div class="row">
                    <label class="label-login">Register</label>
                </div>
                <hr>
                <div class="row form-group">
                    <div class="col-md-8 offset-md-2"><input class="form-control" type="email" name="email" placeholder="enter your email"/></div>
                </div>
                <div class="row form-group">
                    <div class="col-md-8 offset-md-2"><input class="form-control" type="text" name="username" placeholder="enter your username"/></div>
                </div>
                <div class="row form-group">
                    <div class="col-md-8 offset-md-2"><input class="form-control" type="password" name="password" placeholder="enter your password"/></div>
                </div>
                <% if(message_regis.length > 0) { %>
                    <div class="col-md-8 offset-md-2 alert alert-danger">  <%= message_regis %></div> 
                <% } %>
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <button class="btn btn-success login" type="submit">
                            <i class="fa fa-sign-in"></i>
                            Register
                        </button>  <a href="/login">go login .</a>
                    </div>
                </div>
            </div> 
        </form>
        
    </main>

    <footer>
        <% include partials/footer %>
    </footer>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(document).ready(function(){
                
        });
    </script>
</body>
</html>